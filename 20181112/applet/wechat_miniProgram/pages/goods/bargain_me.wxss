.container {
    position: relative;
    width: 100%;
    min-height: 100%;
    margin: 0 auto;
    padding: 0 0 98rpx;
    overflow-x: hidden;
    background-color: #f4f4f4;
}
.hide{
  display:none;
}
.react-base-list-wrapper {
    position: relative;
    width: 100%;
    line-height: 1;
    overflow: hidden;
}
.cb-order-list{position: relative;}
.cb-order-list .cb-order-item {
    height: 290rpx;
    width: 100%;
    position: relative;
    background-color: #fff;
    overflow: hidden;
    clear: both;
}
.cb-order-list .cb-order-item image {
    position: absolute;
    width: 270rpx;
    height: 270rpx;
    top: 10rpx;
    left: 0;
}

.cb-order-list .cb-order-item .order-right {
    position: relative;
    width: 100%;
    height: 100%;
    padding: 10rpx 20rpx 10rpx 290rpx;
}
.cb-order-list .cb-order-item .order-right .goods-name {
    position: relative;
    margin-top: 10rpx;
    font-size: 28rpx;
    max-height: 76rpx;
    line-height: 38rpx;
    overflow: hidden;
    color: #151516;
}
.cb-order-list .cb-order-item .order-right .remain {
    position: absolute;
    left: 290rpx;
    bottom: 22rpx;
    width: auto;
    text-align: left;
}
.cb-order-list .cb-order-item .order-right .remain .remain-desc {
    color: #9c9c9c;
    font-size: 24rpx;
    line-height: 36rpx;
    height: 36rpx;
}
.cb-order-list .cb-order-item .order-right .remain .remain-price {
    width: auto;
    height: 38rpx;
    line-height: 38rpx;
    color: #e02e24;
    font-size: 30rpx;
}
.cb-order-list .cb-order-item .order-right button {
    bottom: 22rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-size: 30rpx;
    position: absolute;
}
.cb-order-list .cb-order-item .order-right button {
    right: 20rpx;
    width: 204rpx;
    text-align: center;
    color: #fff;
    background-color: #e02e24;
    border-radius: 8rpx;
}
.cb-order-list .cb-order-item .order-right:after {
    content: "";
    width: 460rpx;
    height: 1px;
    background-color: #ededed;
    display: block;
    position: absolute;
    bottom: 0;
    right: 0;
}

.cb-tab {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
    font-size: 30rpx;
    z-index: 1;
    border-top: 2rpx solid #e0e0e0;
}
.cb-tab .tab-item {
    float: left;
    width: 50%;
    height: 98rpx;
    line-height: 98rpx;
    color: #58595b;
    text-align: center;
}
.cb-tab .tab-item text {
    display: inline-block;
    vertical-align: middle;
    position: relative;
    padding-left: 42rpx;
}
.cb-tab .tab-item text:before {
    font-size: 32rpx;
    color: #e0e0e0;
    font-family: 'iconfont';
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    position: absolute;
    left: 0;
    line-height: 96rpx;
}
.icon-bargain:before {
    content: "\e67c";
}
.cb-tab .tab-item text.active:before {
    color: #e02e24;
}
.icon-bargain-group:before {
    content: "\e61d";
}
.cb-tab .tab-split {
    position: absolute;
    left: 50%;
    top: 34rpx;
    width: 2rpx;
    height: 30rpx;
    background-color: #e0e0e0;
}