
.wx-body{
  background-color:rgba(0,0,0,0.1);
}

.wx-body>view{
  margin-bottom:10rpx;
  background-color:#fff;
  padding-bottom:10rpx;
}
.intro {
  margin: 30px;
  text-align: center;
}
.wx-topReport{
  text-align:center;
  background-repeat:no-repeat;
  background-size:100% 100%;
  height:300rpx;
  margin:20rpx;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-content:center;
  color:#fff;
  border-radius:10rpx;
  box-shadow:6rpx 6rpx rgba(0,0,0,0.2);
}
.tfR{
  color: #1afa29;
}
.wx-topReport>view{
  margin:20rpx 0;
}
.wx-flash{
  padding:30rpx 0;
  margin:0 20rpx;
}
.f-flex{
  display:flex;
  align-items:center;
  justify-content:space-around;
  height:100rpx;
}

.ff-swiper{
  flex:1;
  height:100rpx;
}
.ff-s-item{
  height:100rpx;
  display:flex;
  align-items:center;
}
.ff-s-text{
  width:90%;
  padding-left:10rpx;
  position:absolute;
  top:-8rpx;
  left:0;
  overflow:hidden;
  font-size:30rpx;
  text-align:center;
}
.wx-people-means,.wx-slide-urgency{
  margin:0 20rpx;
  padding:30rpx 0;
}
.su-t-title{
  font-size:40rpx;
  font-weight:bold;
}
.su-t-prom{
  font-size:20rpx;
}
.su-s-item>view{
  height:90%;
  width:30%;
  box-shadow:0 0 4rpx rgba(0,0,0,0.2);
  background-repeat:no-repeat;
  background-position:0 0;
  background-size:100% 100%;
  position:relative;
  border-radius:5rpx;
}
.sc-data{
  position:absolute;
  left:20rpx;
  bottom:20rpx;
  color:#fff;
}
.sc-data>view{
  margin-bottom:5rpx;
}
.su-s-item{
  display:flex;
  height:300rpx;
  align-items:center;
  justify-content:space-around;
}
.s-d-name{
  font-size:20rpx;
}
.s-d-age{
  font-size:25rpx;
}
.s-d-time{
  font-size:20rpx;
  color:#1afa29;
}
.su-b-swiper{
  margin:10rpx 0;
}
.pd-item{
  height:550rpx;
  border-radius:10rpx;
  box-shadow:0 0 5rpx rgba(0,0,0,0.3);
  margin:20rpx 0;
  display:flex;
  flex-direction:column;
  justify-content:space-around;
  align-items:center;
}
.pd-item>view{
  width:100%;
}
.pd-top{
  display:flex;
  justify-content:space-around;
  height:400rpx;
}
.p-t-left{
  width:35%;
  border:2rpx solid #ccc;
  border-radius:12rpx;
  overflow:hidden;
}
.p-t-right{
  font-size:30rpx;
  width:60%;
}
.pd-bottom{
  height:100rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
  font-size:30rpx;
}
.pbl-num{
  color:#1afa29;
}
.pbr-btn{
  background-color:#1afa29;
  color:#fff;
  font-size:30rpx;
}
.ptl-img{
  height:396rpx;
  width:100%;
}
.p-b-left{
  display:flex;
  align-items:center;
}
.pbl-icon{
  margin-right:5rpx;
}

.ptr-title{
  font-weight:bold;
  font-size:35rpx;
}