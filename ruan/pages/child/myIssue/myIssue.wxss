/*修改weui.wxss的样式开始*/
.wx-body .weui-cell__ft{
  display:flex;
}
/*修改weui.wxss的样式结束*/
/* pages/child/myIssue/myIssue.wxss */

.cell-scroll{
  position:relative;
}
.weui-cells:active{
  opacity:0.8;
}
.cell_end{
  position:absolute;
  height:42px;
  top:0;
  bottom:0;
  border-top:1px solid #ccc;
  border-bottom:1px solid #ccc;
  overflow:hidden;
  display:flex;
}
.cell_end>view{
  font-size:13px;
  width:120rpx;
  height:44px;
  line-height:44px;
  text-align:center;
  display:inline-flex;
  align-items:center;
  justify-content:center;
}
.c_e_detail{
  background-color:green;
  color:#fff;
}
.c_e_change{
  background:#ececec;
  color:#7c7c7c;
}
.c_e_delete{
  background:#f6a623;
  color:#fff;
}
.wc_b-title{
  font-size:10px;
}
.wc_b-content{
  font-size:7px;
}
.wc_f-text{
  font-size:12px;
  opacity:0.7;
}
.wc_b-name{
  font-size:13px;
  font-weight:bold;
}
.wc_f-gender{
  opacity:0.5;
}
.tz-btn{
  text-align:right;
  display:flex;
  align-items:center;
  border-bottom:1px solid #ccc;
  justify-content:space-between;
}
.tz-btn>.weui-btn{
  margin:10px;
  width:90px;
  font-size:12px;
  color:#fff;
}
.text-info{
  display:inline-block;
  float:right;
  font-size:30rpx;
  opacity:0.5;
  padding:10px;
}
.ti-green{
  color:green;
}
.wx-status-no{
  color:black;
}
.wx-status-yes{
  color:green;
}
.wx-status-info{
  color:yellowgreen;
}
.wx-status-danger{
  color:red;
}
.wx-status-warn{
  color:orange;
}
.weui-cells{
  font-size:34rpx;
  height:80rpx;
}
.weui-cell{
  padding:0 15px;
  height:80rpx;
}
.wc_b-name{
  font-size:30rpx;
}
.cell_end{
  font-size:30rpx;
  height:80rpx;
}
.cell_end>view{
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
}
.weui-cell_img{
  margin-right: 5px;
  vertical-align: middle;
  width:40rpx; 
  height: 40rpx;
  border-radius:50%;
}