.i-sticky-demo-des{
  position: sticky;
  left: 0;
  top: 0;
  width: 100%;
  border-bottom: 1px solid #ccc;
  z-index: 999;
  background-color: #fff;
}

.search-box{
  position: relative;
  display:flex;
  align-items:center;
  background: #F2F2F2;
  border-radius: 5px;
  margin:10px;
}

.search-box input{
  flex:1;
  height:33px;
  line-height: 33px;
  font-size: 12px;
  color: #ccc;
  box-sizing: border-box;
  font-weight: bold;
  font-family: "微软雅黑";
  padding-right:7px;
}




.search-box .search-img{
  width:18px;
  height:17px;
  padding:0 7px;
}

.search-box .close{
  width:16px;
  height:16px;
  right:26px;
  top:7px;
}

.card{
  width: 90%;
  /* min-height:450rpx; */
  margin: 20px auto;
  padding: 10px;
  box-sizing: border-box;
  /* border:2px solid #F2FCF1; */
  box-shadow: #F2FCF1 1px 1px 1px 2px ;
}

.card::before{
  content: "";
  display: table;
  clear: both;
}

.card::after{
  content: "";
  display: table;
  clear: both;
}

.card .left-img{
  width:35%;
  height:320rpx;
  float:left;
}


.card .left-img image{
  width: 100%;
  height: 100%;
  border-radius: 5px;
  float: left;
}

.card .right-text{
  width: 60%;
  height: 50%;
  float: right;
  box-sizing: border-box;
  margin-bottom: 30px;
}

.card .right-text .title{
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 0;
}

.card .right-text text{
  font-size: 25rpx;
  display: block;
  margin-top: 10px;
}


.card .bottom{
  float: left;
  width: 100%; 
  height: 83rpx;
  line-height: 83rpx;
  position: relative;
}

.card .bottom .icon{
  width:51rpx;
  height:41rpx;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}


.card .bottom text{
  float: left;
  font-size: 30rpx;
}

.card .bottom>text{
  padding-left:51rpx; 
  margin-left: 5px;
}


.card .bottom .hl{
  color: #44BC52;
}

.card .bottom button{
  float: right;
}

button{
  background-color: #2CCE23;
  color: #fff;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}



