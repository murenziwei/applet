/**index.wxss**/

.content-body{
  display:flex;
  flex-wrap:wrap;
}
.childI{
  box-shadow:0 0 1px;
  margin:10px;
  padding:3px 5px;
  font-size:14px;
  transition:all .3s;
}
.ik-checkbox{
  display:none;
}
.ik-checkbox[checked]+.childI{
  color:blue;
}
.edit{
  display:flex;
  flex-wrap:wrap;
}
.splicepicker,.edit>button{
  font-size:10px;
  margin:30rpx;
}
.iv{
  box-shadow:0 0 4rpx;
  padding:4rpx;
}