<view id="complaint_root" style="visibility: visible;">
   <view id="complaint_type">
		<view id="complaint_type_title">退款类型<text class="price">*</text></view>
		<view id="complaint_type_input">
			
			<view data-rel="1" bindtap='chose_type'  class="{{refund_type == 1 ? 'complaint_type_input_selected' :'' }}">仅退款
				<image src="data:image/png;base64,"></image>
			</view>
			<view data-rel="2" bindtap='chose_type' class=" {{refund_type == 2 ? 'complaint_type_input_selected' :'' }}">我要退货
				<image src="data:image/png;base64,"></image>
			</view>
		</view>
   </view>

   <view id="complaint_money">
		<view id="complaint_money_title">退款金额(元)<text class="price">*</text>
			<view class="input_number_hint span">(最高可退款 ￥{{total_money}})</view>
		</view>
		<view id="complaint_money_input">
			<input id="complaint_money_input_input" bindinput="refund_money_input" value="" maxlength="12" type="text" placeholder="最高可退款 ￥{{total_money}}" class="complaint_input_inputed"></input>
		</view>
   </view>
   <view id="complaint_reason">
		<view id="complaint_reason_title">退款原因<text class="price">*</text></view>
		<view id="complaint_reason_input">

			<picker bindchange="bindPickerChange" value="{{index}}" range="{{xarray}}">
        <view class="picker">
          {{xarray[index]}}
        </view>
      </picker>

		</view>
   </view>
   <view id="complaint_desc">
		<div id="complaint_desc_title">问题描述<view class="price">*</view>
			<view class="input_number_hint span"></view>
			<!--ms-if-->
		</div>
		<div id="complaint_desc_input" maxlength="170">
			<textarea id="complaint_desc_input_textarea" bindinput="wenti_input" placeholder="问题描述越详细,可以提高您的申请成功率哦。（至多170字）"></textarea>
		</div>
   </view>

   <view id="images_info">
		<view id="images_info_title">上传凭证图片（最多三张）<view class="price">*</view></view>
		<view id="image_unloader_positioner" style="height:0"></view>
		<view id="image_uploader_root">
      
      <view class="image_uploader_image" wx:for="{{refund_thumb_imgs}}" style="">	
        <image class="image_uploader_image_img_portrait" src="{{item}}">	</image>
        <view class="image_uploader_image_delete" data-sr="{{item}}" bindtap='cancle_img' >-</view>
      </view>

			<view id="image_uploader_selector" bindtap='choseImg'>
				<view id="image_uploader_indicate">+</view>
			</view>
		</view>
   </view>
	<view id="mobile">
		<view id="mobile_title">联系方式<view class="price">*</view></view>
		<view id="mobile_input">
			<input id="mobile_input_input" value="" bindinput="mobile_input" type="number" maxlength="20" placeholder="请输入手机号" class="complaint_input_inputed"> </input>
		</view>
   </view>
	<view id="complaint_need_know">
		<view id="complaint_need_know_title">退款须知</view>
		<view id="complaint_need_know_desc" class="ul">
		   <view class="li">请按照提示关注维权进度和超时提醒并提供相应凭证。</view>
		</view>
	</view>
	<view id="submit_button" align="center">
		<view class="span" bindtap='sub_refund'>提交申请</view>
	</view>
</view>