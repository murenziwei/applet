.container {
    position: relative;
    width: 100%;
    max-width: 640px;
    min-height: 100%;
    margin: 0 auto;
    padding: 0 0 46px;
    overflow-x: hidden;
    background-color: #f8f8f8;
}
.no-footer {
    padding-bottom: 0!important;
}
.goods-detail {
    position: relative;
    width: 100%;
    height: 372rpx;
    background-color: #fff;
    overflow: hidden;
}
.goods-image {
    position: absolute;
    left: 0;
    top: 0;
    height: 300rpx;
}
.goods-image, .goods-info {
    margin: 36rpx;
    width: 300rpx;
    overflow: hidden;
}
.goods-image image{
width:300rpx;
height:300rpx;
}
.goods-info {
    float: right;
    height: auto;
}
.goods-name {
    font-size: 14px;
    line-height: 18px;
    padding-right: 0;
    max-height: 54px;
    width: 100%;
    font-weight: 700;
    overflow: hidden;
    color: #666;
    text-align: justify;
}
.sale-price {
    display: inline-block;
    margin-top: 7px;
    font-size: 18px;
    font-weight: 700;
    color: #f0373d;
}
.sale-price {
    color: #f69;
}
.market-price {
    display: inline-block;
    margin: 10px 0 0 5px;
    font-size: 11px;
    color: gray;
    overflow: hidden;
    text-decoration: line-through;
}
.status {
    position: absolute;
    bottom: 10%;
    height: 40px;
    line-height: 40px;
    font-size: 14px;
    width: 300rpx;
    text-align: center;
    color: #fff;
      background: -webkit-linear-gradient(left,#ff5777,#ff468f);
    background: linear-gradient(90deg,#ff5777,#ff468f);
    border-radius: 5px;
    -webkit-border-radius: 5px;
}
.gap-container {
    width: 100%;
    height: 10px;
    background-color: #eceded;
}
.result-title {
    background-color: #fff;
    height: 35px;
    line-height:35px;
    width: 100%;
    overflow: hidden;
}
.result-title image {
    width: 16px;
    height: 16px;
   margin-left:15px;
}
.sub-title {
    height: 30px;
    padding-top: 6px;
    font-size: 13px;
}
.forward-coupons, .sub-title {
    display: inline-block;
    font-weight: 700;
}
.forward-coupons, .sub-title {
    display: inline-block;
    font-weight: 700;
}
.forward-coupons {
    width: 130px;
    height: 35px;
    line-height: 20px;
    padding-top: 8px;
    margin-right: 0;
    float: right;
    background-color: #f69600;
    text-align: center;
    font-size: 14px;
    color: #fff;
}
.forward-coupons {
    background-color: #f69;
}
.tab-title {
    background-color: #fff;
    border-top: 1px solid #d5d5d5;
    border-bottom: 1px solid #d5d5d5;
    margin-bottom: 10px;
    width: 100%;
    height: 40px;
    font-size: 16px;
    overflow: hidden;
}

.tab-name, .tab-order, .tab-tel {
    display: inline-block;
    height: 100%;
    width: 30%;
    text-align: center;
    padding-top: 4px;
}
.user-list {
    padding-top: 15px;
    position: relative;
}
.list-item {
    background-color: #fff;
    border: 1px solid #d5d5d5;
    margin-bottom: 20px;
    padding: 10px 5px 10px 50px;
    position: relative;
}
.avatar {
    background-clip: padding-box;
    border-radius: 30px;
    display: block;
    height: 30px;
    left: 10px;
    position: absolute;
    top: -15px;
    width: 30px;
}

.item-info {
    height: 21px;
    margin-bottom: 3px;
}


.nickname {
    width: 19%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-right: 3.9%;
    text-align: left;
    float: left;
}

.nickname .b {
    color: #333;
    font-weight: 400;
    margin-right: 5px;
	display:inline;
}
.order-label {
    width: 46%;
}
.mobile, .order-label {
    display: inline-block;
    overflow: hidden;
    text-align: center;
}

.mobile {
    width: 30%;
    float: right;
}










